// memory leak
#include <iostream>
#include <stdlib.h>
#include <errno.h>

int main() {
    int *ptr_one;
    ptr_one = (int *)malloc(sizeof(int));
    if (ptr_one == 0)
    {
        printf("ERROR: Out of memory\n");
        return 1;
    }
    *ptr_one = 25;
    printf("%d\n", *ptr_one);
    return 0;
}
// dangling pointer
char *a = malloc(128*sizeof(char));
char *b = malloc(128*sizeof(char));
b = a;
free(a);
free(b); // will not free the pointer to the original allocated memory.

// double free memory 
char *a = malloc(128*sizeof(char));
free(a);
free(a);
